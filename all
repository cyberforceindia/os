read -p "Enter number: " n
rev=0

while [ $n -gt 0 ]
do
  r=$((n%10))
  rev=$((rev*10+r))
  n=$((n/10))
done

echo "Reverse = $rev"
[16/12, 10:33 am] Uday Mali Bhadgaon: Palindrome 

#!/bin/bash
read -p "Enter number: " n
temp=$n
rev=0

while [ $n -gt 0 ]
do
  r=$((n%10))
  rev=$((rev*10+r))
  n=$((n/10))
done

if [ $temp -eq $rev ]; then
  echo "Palindrome"
else
  echo "Not Palindrome"
fi
[16/12, 10:33 am] Uday Mali Bhadgaon: Smallest 3 no. .. 

#!/bin/bash
read -p "Enter three numbers: " a b c

if [ $a -le $b ] && [ $a -le $c ]; then
    echo "Smallest = $a"
elif [ $b -le $a ] && [ $b -le $c ]; then
    echo "Smallest = $b"
else
    echo "Smallest = $c"
fi
